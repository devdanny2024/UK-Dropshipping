generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PLACED
  PROCESSING
  AWAITING_PURCHASE
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  RECEIVED
  CAPTURED
  FAILED
}

enum PurchaseAttemptStatus {
  QUEUED
  RUNNING
  FAILED
  SUCCESS
}

enum ShipmentStatus {
  CREATED
  IN_TRANSIT
  DELIVERED
  ISSUE
}

enum AddressType {
  SHIPPING
  BILLING
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  passwordHash String
  phone     String?
  emailVerifiedAt DateTime?
  createdAt DateTime  @default(now())
  addresses Address[]
  orders    Order[]
  sessions  Session[]
  emailVerifications EmailVerificationToken[]
  passwordResets PasswordResetToken[]
}

model Address {
  id         String   @id @default(cuid())
  userId     String?
  label      String?
  line1      String
  line2      String?
  city       String
  state      String?
  postalCode String
  country    String
  phone      String?
  type       AddressType @default(SHIPPING)
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
  orders     Order[]
  quotes     Quote[]
}

model ProductSnapshot {
  id        String   @id @default(cuid())
  url       String
  title     String
  imageUrl  String?
  price     Float
  currency  String
  raw       Json
  createdAt DateTime @default(now())
  quotes    Quote[]
  items     OrderItem[]
}

model Quote {
  id                String   @id @default(cuid())
  productSnapshotId String
  size              String
  color             String
  qty               Int
  subtotal          Float
  shipping          Float
  tax               Float
  total             Float
  currency          String
  addressId         String
  createdAt         DateTime @default(now())
  productSnapshot   ProductSnapshot @relation(fields: [productSnapshotId], references: [id])
  address           Address         @relation(fields: [addressId], references: [id])
}

model Order {
  id         String       @id @default(cuid())
  userId     String?
  addressId  String?
  status     OrderStatus
  currency   String
  total      Float
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  user       User?        @relation(fields: [userId], references: [id])
  address    Address?     @relation(fields: [addressId], references: [id])
  items      OrderItem[]
  payments   Payment[]
  attempts   PurchaseAttempt[]
  shipments  Shipment[]
  events     OrderEvent[]
}

model OrderItem {
  id                String   @id @default(cuid())
  orderId           String
  productSnapshotId String
  qty               Int
  size              String
  color             String
  unitPrice         Float
  total             Float
  order             Order           @relation(fields: [orderId], references: [id])
  productSnapshot   ProductSnapshot @relation(fields: [productSnapshotId], references: [id])
}

model Payment {
  id              String        @id @default(cuid())
  orderId         String?
  paymentRef      String
  provider        String
  amount          Float
  currency        String
  status          PaymentStatus
  idempotencyKey  String        @unique
  createdAt       DateTime      @default(now())
  order           Order?        @relation(fields: [orderId], references: [id])
}

model PurchaseAttempt {
  id              String                @id @default(cuid())
  orderId         String
  status          PurchaseAttemptStatus
  note            String?
  idempotencyKey  String                @unique
  createdAt       DateTime              @default(now())
  order           Order                 @relation(fields: [orderId], references: [id])
}

model Shipment {
  id             String         @id @default(cuid())
  orderId        String
  carrier        String
  trackingNumber String
  status         ShipmentStatus
  createdAt      DateTime       @default(now())
  order          Order          @relation(fields: [orderId], references: [id])
}

model OrderEvent {
  id        String   @id @default(cuid())
  orderId   String
  type      String
  message   String
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  products    Product[]

  @@index([isActive])
  @@index([sortOrder])
}

model Product {
  id            String   @id @default(cuid())
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name          String
  slug          String   @unique
  description   String?
  images        Json?
  productCode   String?
  externalUrl   String?
  priceGBP      Decimal? @db.Decimal(10, 2)
  currency      String   @default("GBP")
  isActive      Boolean  @default(true)
  isFeatured    Boolean  @default(false)
  featuredOrder Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([categoryId])
  @@index([isFeatured])
  @@index([isActive])
}
